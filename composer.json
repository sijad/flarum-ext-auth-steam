{
    "name": "sijad/flarum-ext-auth-steam",
    "description": "Allow users to log in with their steam account.",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sajjad Hashemian",
            "email": "wolaws@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/sijad/flarum-ext-auth-steam/issues",
        "source": "https://github.com/sijad/flarum-ext-auth-steam"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.5"
    },
    "autoload": {
        "psr-4": {
            "Sijad\\Auth\\Steam\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Steam Login",
            "icon": {
                "name": "steam",
                "backgroundColor": "#5b5b5b",
                "color": "#f5f5f5"
            }
        }
    }
}
